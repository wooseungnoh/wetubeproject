extends layouts/main

block content
    .form-container
        form(action=`/users${routes.editProfile}`, method="post", enctype="multipart/form-data")
            label(for="avatar") Avatar
            input(type="file", id="avatar", name="avatar", accept="image/*")
            input(type="text", placeholder="name", name="name", value=loggedUser.name)
            input(type="text", placeholder="Email", name="email", value=loggedUser.email)
            input(type="submit", value="Update Profile")
        a.form-container__link(href=routes.changePassword) Change Password