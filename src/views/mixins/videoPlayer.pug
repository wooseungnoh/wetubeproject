mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .playGauge
                .now
            .videoPlayer__column
                span.playTime
                    span#currentTime 00:00:00
                    | /
                    span#totalTime 00:00:00

            .videoPlayer__column#volume
                span#volumeRange
                    i.fas.fa-volume-up                    
                input.videoPlayer__volume#jsVolume(type="range", min="0" max="1" value="0.5" step="0.1")

            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand